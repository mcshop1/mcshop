<!-- views/admin.ejs -->
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>관리자 페이지</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <h1>관리자 페이지</h1>
        <h2>고객 입력 정보</h2>
        
        <table border="1">
            <thead>
                <tr>
                    <th>캐릭터명</th>
                    <th>입금자명</th>
                    <th>전화번호</th>
                    <th>수량</th>
                    <th>총 가격</th>
                </tr>
            </thead>
            <tbody>
                <% customerData.forEach(data => { %>
                    <tr>
                        <td><%= data.characterName %></td>
                        <td><%= data.depositorName %></td>
                        <td><%= data.phoneNumber %></td>
                        <td><%= data.quantity %></td>
                        <td><%= data.totalPrice %> 원</td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        
        <a href="/" class="btn">홈으로 돌아가기</a>
    </div>
</body>
</html>
